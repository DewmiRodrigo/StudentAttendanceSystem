<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.cmjd111.ijse.studentattendancesystem.controller.LoginController"
            prefWidth="600" prefHeight="400">

    <Label layoutX="188" layoutY="43" text="Student Attendance System"
           style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" layoutX="164" layoutY="168"
               promptText="Username" prefWidth="250"/>

    <PasswordField fx:id="passwordField" layoutX="164" layoutY="216"
                   promptText="Password" prefWidth="250"/>

    <Button fx:id="loginButton" layoutX="226" layoutY="288"
            text="Login" prefWidth="150"
            onAction="#handleLogin"/>
</AnchorPane>